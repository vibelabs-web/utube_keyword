{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "defer_loading": true
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ],
      "defer_loading": true
    },
    "gemini": {
      "command": "npx",
      "args": [
        "-y",
        "gemini-cli-mcp-server",
        "start"
      ],
      "env": {
        "GEMINI_MODEL": "gemini-3-pro-preview"
      },
      "defer_loading": true
    }
  }
}